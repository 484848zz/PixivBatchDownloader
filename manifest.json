{
  "name": "Pixiv Batch Downloader",
  "version": "2.5.5",
  "manifest_version": 2,
  "description": "功能强大的 Pixiv 图片批量下载器。Powerful Pixiv image batch downloader.",
  "icons": {
    "16": "dist/icon/logo16.png",
    "32": "dist/icon/logo32.png",
    "48": "dist/icon/logo48.png",
    "128": "dist/icon/logo128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "dist/icon/logo16.png",
      "32": "dist/icon/logo32.png",
      "48": "dist/icon/logo48.png",
      "128": "dist/icon/logo128.png"
    },
    "default_title": "Pixiv Batch Downloader"
  },
  "content_scripts": [
    {
      "js": ["dist/lib/viewer.min.js"],
      "matches": [
        "*://www.pixiv.net/member.php*",
        "*://www.pixiv.net/member_illust.php*",
        "*://www.pixiv.net/bookmark.php*"
      ],
      "run_at": "document_end"
    },
    {
      "js": ["dist/lib/zip.js", "dist/lib/whammy.js", "dist/lib/gif.js"],
      "matches": ["*://www.pixiv.net/*"],
      "run_at": "document_end"
    },
    {
      "js": ["dist/js/lang.js", "dist/js/content.js"],
      "matches": ["*://www.pixiv.net/*", "*://www.pixivision.net/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["dist/js/background.js"]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "activeTab",
    "*://www.pixiv.net/*",
    "*://www.pixivision.net/*",
    "*://*.pximg.net/*"
  ],
  "web_accessible_resources": [
    "dist/lib/z-worker.js",
    "dist/lib/gif.worker.js",
    "dist/style/xzstyle.css",
    "dist/style/viewer.min.css",
    "dist/images/github-logo.png",
    "dist/images/wiki.png"
  ]
}
